<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card:cardElevation="20dp"
    card:cardCornerRadius="20dp"
    card:cardMaxElevation="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLightPurple"
        android:orientation="vertical"
        android:padding="5dp">

        <EditText
            android:id="@+id/card_footer_content"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="35dp"
            android:layout_marginBottom="30dp"
            android:textColor="@color/colorDarkPurple"
            android:textSize="15sp"
            android:hint="content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:background="@drawable/key" />

            <TextView
                android:id="@+id/card_footer_key"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:text="Key word" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/key2" />

                <EditText
                    android:id="@+id/card_footer_key2"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorDarkPurple"
                    android:hint="key"/>

            </LinearLayout>

            <Button
                android:id="@+id/card_footer_add"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/add"
                android:layout_gravity="right"
                android:layout_margin="5dp"/>

        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>