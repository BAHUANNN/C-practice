<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/textView2"

        android:background="@drawable/movie"
        android:src="@drawable/dragon"
        android:layout_marginTop="64dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/register_number"
        android:lines="1"
        android:hint="用户名"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/register_password"
        android:layout_alignStart="@+id/register_password"
        app:met_floatingLabelText="由中文、英文和数字组成"
        app:met_primaryColor="@color/colorLightPurple"
        app:met_baseColor="@color/colorLightPurple"
        app:met_errorColor="@color/colorAccent"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/register_password"
        android:lines="1"
        android:hint="密码"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/register_number"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        app:met_floatingLabelText="8~16个字符"
        app:met_primaryColor="@color/colorLightPurple"
        app:met_baseColor="@color/colorLightPurple"
        app:met_errorColor="@color/colorAccent"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/register_password_re"
        android:lines="1"
        android:hint="确认密码"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/register_password"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        app:met_primaryColor="@color/colorLightPurple"
        app:met_baseColor="@color/colorLightPurple"
        app:met_errorColor="@color/colorAccent"/>

    <Button
        android:id="@+id/register_register"
        android:text="SIGN UP"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:shadowRadius="3"
        android:shadowDy="5"
        android:shadowDx="3"
        android:background="@drawable/loginbutton"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/register_password_re"
        android:layout_marginTop="16dp"
        android:layout_width="93dp"
        android:layout_height="36dp" />

    <TextView
        android:id="@+id/register_goto_login"
        android:layout_below="@+id/register_register"
        android:text="已有账号，去登陆"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>